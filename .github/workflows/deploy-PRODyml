name: Build & Deploy
on:
  push:
    branches: [PROD]

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Deploy NodeJS app
        uses: appleboy/ssh-action@v0.1.2
        
        with:
          host: ${{secrets.QA_SSH_HOST}}
          key: ${{secrets.QA_SSH_KEY}}
          username: ${{ secrets.SSH_USERNAME}}

          script: 
            mkdir prod_project
            cd prod_project
            git clone -b PROD git@github.com:ecoleduweb/ProjetApplicationH2024.git
            echo 'Deployment successful to PROD server'
